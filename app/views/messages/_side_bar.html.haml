.Side-bar
  .user-name
    .user-name__content
      .user-name__content__name
        = current_user.name
      .user-name__content__icon
        %ul
          %li
        = link_to new_group_path do
          = icon('far', 'edit')
          %li
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group-list__content
        = link_to group_messages_path(group) do
          .group-list__content__list1
            = group.name
          .group-list__content__list2
            = group.show_last_message